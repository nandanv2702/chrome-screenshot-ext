{
  "name": "Screenshot Ext",
  "version": "1.0",
  "description": "Take a screenshot of your browser easily!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screenshot!"
  },
  "icons": {
    "16": "camera.png"
  },
  "permissions": ["activeTab"],
  "manifest_version": 2
}
