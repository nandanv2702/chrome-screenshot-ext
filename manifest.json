{
  "name": "Screenshot Ext",
  "version": "1.0",
  "description": "Take a screenshot of your browser easily!",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Take a screenshot!"
  },
  "icons": {
    "16": "camera.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["storage",
    "tabs",
    "activeTab",
    "<all_urls>", "*://*/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["capture.js"]
  }]
}
